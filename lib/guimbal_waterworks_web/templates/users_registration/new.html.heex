
<div class="sidebar-container">
  <div class="log-in-column">
    <div class="log-in-container">
      <h1>Register</h1>

      <.form 
        let={f} 
        for={@changeset} 
        action={Routes.users_registration_path(@conn, :create)}
        class="form-component"
      >
        <%= if @changeset.action do %>
          <div class="alert alert-danger">
            <p>Oops, something went wrong! Please check the errors below.</p>
          </div>
        <% end %>

        <div class="field-group">
          <%= label f, :username %>
          <%= text_input f, :username, required: true %>
          <%= error_tag f, :username %>
        </div>

        <div class="field-group">
          <%= label f, :first_name %>
          <%= text_input f, :first_name, required: true %>
          <%= error_tag f, :first_name %>
        </div>

        <div class="field-group">
          <%= label f, :middle_name %>
          <%= text_input f, :middle_name %>
          <%= error_tag f, :middle_name %>
        </div>

        <div class="field-group">
          <%= label f, :last_name %>
          <%= text_input f, :last_name, required: true %>
          <%= error_tag f, :last_name %>
        </div>

        <div class="field-group">
          <%= label f, :role %>
          <%= select( 
            f, 
            :role, 
            ["Admin": :admin, "Cashier": :cashier], 
            required: true  
          )%>
          <%= error_tag f, :role %>
        </div>

        <div class="field-group">
          <%= label f, :password %>
          <%= password_input f, :password, required: true %>
          <%= error_tag f, :password %>
        </div>

        <div class="form-button-group">
          <%= submit "Register", class: "submit" %>
          <%= link "Log in", to: Routes.users_session_path(@conn, :new), class: "neutral" %>
        </div>
      </.form>
    </div>
  </div>
